  <!-- STEP 3 END -->

  <!-- STEP 4 START -->
  <%= simple_form_for @activity, url: activities_path, method: :post, remote: true do |f| %>
  <div class="container my-3 py-3 step4">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#highlights">HIGHLIGHTS</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#people">PEOPLE</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#date">DATE</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#price">PRICE</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content bg-light p-3">
      <div id="highlights" class="tab-pane active "><br>
        <div class="row">
          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              Your activity highlights*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <%= f.input :highlight_title, label: false, :input_html => { class: "form-control", placeholder: "Three unique locations"} %>
              <div class="input-group-append">
                <span class="input-group-text">
                <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>
          <div class="col-sm-6 mb-3"></div>

          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              What's including?*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <% @activity.include_details.build %>
              <%= f.simple_fields_for :include_details do |incdetail| %>
                <%= incdetail.input :detail_title, label: false, input_html:{ class: "form-control" , placeholder: "Food and drinks"} %>
              <% end %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>

          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              What's excluding?*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <% @activity.exclude_details.build %>
              <%= f.simple_fields_for :exclude_details do |excdetail| %>
                <%= excdetail.input :detail_title, label: false, input_html:{ class: "form-control" , placeholder: "Bikes"} %>
              <% end %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>

          <!-- <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              What languages do you speak?*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <input type="text" class="form-control" placeholder="English">
              <div class="input-group-append">
                <span class="input-group-text">
                  <img src="./assets/images/plus.svg">
                </span>
              </div>
            </div>
          </div> -->

        </div>
      </div>
      <div id="people" class="container tab-pane fade"><br>
        <div class="row">
          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              Maximum amount of participants*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <%= f.input :maximum_participants, label: false, :input_html => { class: "form-control", placeholder: "Numbers Only"} %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>

          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              Minimum amount of participants*
            </div>
            <div class="input-group mb-3 input-group-lg">
              <%= f.input :minimum_participents, label: false, :input_html => { class: "form-control", placeholder: "Numbers Only"} %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>

          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              Maximum age to participate
            </div>
            <div class="input-group mb-3 input-group-lg">
              <%= f.input :max_age, label: false, :input_html => { class: "form-control", placeholder: "Numbers Only"} %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>

          <div class="col-sm-6 mb-3">
            <div class="font-weight-bold">
              Minimum age to participate
            </div>
            <div class="input-group mb-3 input-group-lg">
              <%= f.input :min_age, label: false, :input_html => { class: "form-control", placeholder: "Numbers Only"} %>
              <div class="input-group-append">
                <span class="input-group-text">
                  <%= image_tag "plus.svg"%>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="date" class="container tab-pane fade"><br>
       <div class="row">
         <div class="col-sm-5 mb-3">
           Calender will be here
         </div>
         <div class="col-sm-7">
           <div class="row">
             <div class="col-sm-7 mb-3">
               <div class="font-weight-bold">
                 Start time*
               </div>
               <div class="input-group mb-3 input-group-lg getTimeWrapper">
                 <input type="text" class="form-control getTime" placeholder="Start time">
                 <div class="input-group-append">
                   <span class="input-group-text">
                     <%= image_tag "clock.svg", height: "24"%>
                   </span>
                 </div>
                 <div class="input-group-append">
                   <span class="input-group-text">
                     <%= image_tag "plus.svg", height: "24"%>
                   </span>
                 </div>
               </div>
             </div>
             <div class="col-sm-5 mb-3"></div>
             <div class="col-sm-7 mb-3">
               <div class="font-weight-bold">
                   End time*
               </div>
               <div class="input-group mb-3 input-group-lg getTimeWrapper">
                 <input type="text" class="form-control getTime" placeholder="End time">
                 <div class="input-group-append">
                   <span class="input-group-text">
                     <%= image_tag "clock.svg", height: "24"%>
                   </span>
                 </div>
                 <div class="input-group-append">
                   <span class="input-group-text">
                     <%= image_tag "plus.svg", height: "24"%>
                   </span>
                 </div>
               </div>
             </div>
             <div class="col-sm-5 mb-3"></div>
           </div>

         </div>

       </div>

     </div>
     <div id="price" class="container tab-pane fade"><br>
       <div class="row mb-3">
         <div class="col">
           <div class="font-weight-bold">
             Set a currency*
           </div>
           <%= f.input :currency, label: false, as: :select, collection: ["USD", "EUR"], :input_html => { class: "custom-select"} %>
         </div>
         <div class="col"></div>
       </div>

       <div class="row mb-3">
         <div class="col">
           <div class="font-weight-bold">
             Price for an adult*
           </div>
           <%= f.input :adult_price, label: false, :input_html => { class: "form-control"} %>
         </div>
         <div class="col"></div>
       </div>

       <div class="row mb-3">
         <div class="col">
           <div class="font-weight-bold">
             Price for kids (3-12)
           </div>
           <%= f.input :kids_price, label: false, :input_html => { class: "form-control"} %>
         </div>
         <div class="col text-left">
           <div class="custom-control custom-checkbox mt-3">
             <%= f.input :kids_free, label: false, as: :boolean, :input_html => { class: "custom-control-input",id: "kidFree", name: "kidFree"} %>
             <label class="custom-control-label" for="kidFree">free</label>
           </div>
         </div>
       </div>

       <div class="row mb-3">
         <div class="col">
           <div class="font-weight-bold">
               Price for a baby (0-3)
           </div>
           <%= f.input :baby_price, label: false, :input_html => { class: "form-control"} %>
         </div>
         <div class="col">
           <div class="custom-control custom-checkbox mt-3">
             <%= f.input :baby_free, label: false, as: :boolean, :input_html => { class: "custom-control-input", id: "babyFree", name: "babyFree"} %>
             <label class="custom-control-label" for="babyFree">free</label>
           </div>
         </div>
       </div>
     </div>
   </div>
   <div class="row mt-3 fourthStepButton">
     <div class="col-sm-12 text-left">
       <button class="btn btn-warning text-white font-weight-bold goNextStep" data-prev-step="3" data-current-step="4" data-next-step="" data-tab="highlights">
         Save
       </button>
     </div>
   </div>
    </div>
  </div>
  <div class="gettingData"></div>
  <% end %>


  <!-- STEP 4 END -->

 <footer>
   <div class="text-center text-white py-3">
     <small>Copyright ©<span class="currentYear">2019</span> All rights reserved</small>
   </div>
 </footer>
