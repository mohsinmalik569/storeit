 <!-- STEP 2 START -->
 <%= simple_form_for @activity, url: new_activity_path, method: :get, remote: true do |f| %>
    <%= f.input :activity_type, as: :hidden, value: "#{params[:activity_type]}" %>
     <div class="container my-3 step2">
       <div class="row">
         <div class="col-sm-5">
           <div class="row">
             <div class="col-sm-12">
               <div class="font-weight-bold">
                 What do you want to offer?*
               </div>
               <%= f.input :offer_title, label: false, :input_html => { class: "form-control form-control-lg"}, name: "toOffer", id: "toOffer" %>
             </div>
           </div>

           <div class="row mt-3">
             <div class="col-sm-12">
               <div class="font-weight-bold">
                 Short Description*
               </div>
               <%= f.input :short_description, label: false, :input_html => { class: "form-control"}, name: "shortDes", id: "shortDes" %>
               <div class="text-right">
                 <small>Max 120 Characters</small>
               </div>
             </div>
           </div>

           <div class="row mt-3">
             <div class="col-sm-12">
               <div class="font-weight-bold">
                 Long Description*
               </div>
               <%= f.input :long_description, label: false, :input_html => { class: "form-control"}, name: "longDes", id: "longDes" %>
             </div>
           </div>

           <div class="row mt-3">
             <div class="col-sm-12">
               <div class="font-weight-bold">
                 Public or Private in search?
               </div>
               <div class="custom-control custom-radio custom-control-inline">
                 <%= f.input :search_type, as: :radio_buttons, label: false, class: "custom-control-input", id: "public", name: "publicOrPrivate", collection:  Activity.search_types.keys.map{|a| [a.remove("_activity").capitalize, a]}%>
                 <!-- <input type="radio" class="custom-control-input" id="public" name="publicOrPrivate" value="public" checked>
                 <label class="custom-control-label" for="public">Public</label> -->
               </div>
               <!-- <div class="custom-control custom-radio custom-control-inline">
                 <input type="radio" class="custom-control-input" id="private" name="publicOrPrivate" value="private">
                 <label class="custom-control-label" for="private">Private</label>
               </div> -->
             </div>
           </div>

         </div>
         <div class="col-sm-7">
           <div class="font-weight-bold">
             Tags
           </div>
           <div class="row">
             <div class="col-sm-3">
               <% @activity.tags.build %>
               <%= f.simple_fields_for :tags do |tagsinput| %>
                 <%= tagsinput.input :tag_name, label: false, input_html:{data:{role:'tagsinput'}} , class: "form-control form-control-lg", name: "tags", id: "tags" %>
               <% end %>
             </div>
             <div class="col-sm-9"></div>
           </div>
         </div>
       </div>

       <div class="row mt-3">
         <div class="col-sm-12 text-center">
           <button class="btn btn-warning text-white font-weight-bold goNextStep" data-prev-step="1" data-current-step="2" data-next-step="3">
             Next Step
           </button>
         </div>
       </div>
     </div>
    <% end %>
 <!-- STEP 2 END -->

 <!-- STEP 3 START -->
 <%= simple_form_for @activity, url: new_activity_path, method: :get, remote: true do |f| %>
 <div class="container my-3 py-3 text-left step3">
